<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:infra ="clr-namespace:Soccer.Infrastructure;assembly=Soccer"
             x:Class="Soccer.App">
	<Application.Resources>

		<!-- Application resource dictionary -->
        <ResourceDictionary>
            <Color x:Key="MainColor">#38401a</Color>
            <Color x:Key="FontColor">#261b14</Color>
            <Color x:Key="AccentColor1">#d9b88f</Color>
            <Color x:Key="AccentColor2">#a68863</Color>
            <Color x:Key="BackgrountColor">#c1ced9</Color>

            <!--locator-->
            <infra:IntanceLocator x:Key="Locator"></infra:IntanceLocator>
            <!--Parameter-->
            <x:String x:Key="URLBase">http://soccerapi55.azurewebsites.net/</x:String>

        </ResourceDictionary>
        
     

	</Application.Resources>
</Application>